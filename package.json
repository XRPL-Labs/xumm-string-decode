{
  "name": "xumm-string-decode",
  "version": "0.1.0",
  "license": "ISC",
  "description": "JS/TS lib to decode strings for the xrpl-labs.com XUMM app",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts"
  ],
  "dependencies": {
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^3.2.0",
    "ts-node": "8.0.3",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^3.6.3",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "3.12.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "watch": "tsc -w",
    "start": "tsc --build -w",
    "dev": "clear;nodemon dist/evaluate.dev.js",
    "prepublish": "npm run clean && npm run test && npm run build",
    "test": "jest --ci --verbose",
    "lint": "tslint -p ./"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/..."
  },
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=10.16.3"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "src/*"
    ],
    "ext": "js",
    "delay": "100",
    "events": {
      "start": "echo \"\\033c\\x1b[36m\"$(date)\"\\n\\x1b[0m\""
    }
  }
}
