{
  "compilerOptions": {
    "lib": [
      "es2017",
      "es2015",
      "dom",
    ],
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test"]
}
